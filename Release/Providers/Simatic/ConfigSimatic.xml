<?xml version="1.0" encoding="windows-1251"?>
<!--Файл установленной конфигурации InfoTask-->
<Config>
  <Packages>
    <!--Установленные пакеты-->
    <Simatic Description="Комплект провайдеров для Siemens" InstallDate="" />
  </Packages>
  <Providers>
    <!--Список провайдеров-->
    <Simatic Description="Комплект провайдеров для связи с Siemens" DllFile="Providers\Siemens\Siemens.dll">
      <SimaticSource ProviderType="Источник" Description="Источник OLE DB ПТК SIMATIC">
        <ProviderProps>
          <MainSQLServer PropNum="1" Description="Имя основного SQL-сервера архива" />
          <ReserveSQLServer PropNum="2" Description="Имя резервного SQL-сервера архива" />
        </ProviderProps>
      </SimaticSource>
      <SimaticComm ProviderType="Коммуникатор" Description="Коммуникатор OLE DB ПТК SIMATIC" ProviderFile="\Providers\Siemens\SimaticComm.accdb">
        <ProviderProps>
          <SQLServer PropNum="1" Description="Имя SQL-сервера"></SQLServer>
          <IndentType PropNum="2" Description="Тип идентификации" DefaultValue="Windows" RowSource="Windows;SqlServer"></IndentType>
          <Login PropNum="3" Description="Логин пользователя SQL-сервера" />
          <Password PropNum="4" Description="Пароль входа в SQL-сервер" />
          <Database PropNum="5" Description="База данных"></Database>
        </ProviderProps>
      </SimaticComm>
    </Simatic>
  </Providers>
</Config>